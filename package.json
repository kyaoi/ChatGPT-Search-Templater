{
  "name": "chatgpt-search-templater",
  "version": "0.1.0",
  "description": "ChatGPT検索テンプレートを管理するChrome拡張（Manifest V3, TypeScript）",
  "type": "module",
  "scripts": {
    "prebuild": "tailwindcss -i src/ui.css -o dist/ui.css --minify",
    "build": "tsc --noEmit && tsup",
    "tailwind:watch": "tailwindcss -i src/ui.css -o dist/ui.css --watch",
    "lint": "biome check .",
    "lint:fix": "biome check . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@tailwindcss/cli": "^4.1.16",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/chrome": "^0.1.24",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "tailwindcss": "^4.1.16",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
