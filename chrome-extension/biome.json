{
  "$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
  "files": {
    "includes": [
      "src/**/*",
      "shared/ts/**/*",
      "package.json",
      "tsconfig.json",
      "tsup.config.ts",
      "biome.json",
      "popup.html",
      "options.html",
      "manifest.json",
      "!dist"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
