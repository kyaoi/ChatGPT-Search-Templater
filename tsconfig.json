{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM", "ES2021"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noEmitOnError": true,
    "baseUrl": ".",
    "removeComments": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["chrome"],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/ts/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "shared/ts/**/*.ts"]
}
